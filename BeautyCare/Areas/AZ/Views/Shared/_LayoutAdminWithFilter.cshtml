<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favicon.ico")"/>
    <title>Калькулятор кузовного ремонта - Административная зона</title>
    @Styles.Render("~/Areas/AZ/Styles/jqueryui/css")
@Styles.Render("~/Areas/AZ/Styles/bootstrap/css/css")
@Styles.Render("~/Areas/AZ/Styles/css")

@Scripts.Render("~/Areas/AZ/Scripts/jquery")
@Scripts.Render("~/Areas/AZ/Scripts/jqueryui")
@Scripts.Render("~/Areas/AZ/Scripts/jqueryval")
@Scripts.Render("~/Areas/AZ/Scripts/bootstrap")
@Scripts.Render("~/Areas/AZ/Scripts/az")   

    @RenderSection("CustomScripts", false)
    @RenderSection("CustomCss", false)
</head>
<body>
    <div id="container">
        <div id="header">
            <img class="logo" src="~/Areas/AZ/Content/logo.gif" />
            <h1> 
                Mercedes-Benz Test-drive
            </h1>
            <div class="clear"></div>
            <div id="menu">
                @Html.MvcSiteMap("AdminSiteMap").Menu("MenuHelper")
            </div>
            <div id="user-data">
                @{Html.RenderPartial("_UserInfoPartial");}
            </div>
        </div>
        <div class="clear"></div>
        <div id="body">
            <div id="content-right-filter">
                <div id="contentbody">
                    @RenderBody()
                </div>
            </div>
            <div class="right-sidebar-filter-header">
                <h2>Фильтр</h2> 
                <button class="showHideFilter">Скрыть фильтр</button>
            </div>
            <div id="right-sidebar-filter">
                @RenderSection("RightSideBar", false)
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</body>
</html>